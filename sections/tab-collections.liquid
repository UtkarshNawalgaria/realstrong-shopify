{%- if section.settings.layout == 'rows' -%}
  {%- if section.settings.grid == 2 -%}
    {%- assign product_class = 'column half' -%}
    {%- elsif section.settings.grid == 3 -%}
    {%- assign product_class = 'column third' -%}
  {%- else -%}
    {%- assign product_class = 'column quarter' -%}
  {%- endif -%}
{%- endif -%}

{%- assign max_products = section.settings.grid | times: section.settings.rows -%}

{% assign animation_type = "cc-fade-in-up" %}
{%- if section.settings.layout == "columns" -%}
  {% assign animation_type = "cc-fade-in" %}
{%- endif -%}

{% if section.settings.layout == 'carousel' %}<div class="product-slider">{% endif %}

<div class="wide-container half-gutter section-spacing {% if section.settings.alternate_bg_color %}use-alt-bg {% endif %}" data-section-type="tabbed-collection" data-components="product-block" data-cc-animate>
  <div class="section-heading">
    <div>
      {% if section.settings.title != blank %}
        <h2 class="h2">
          <a href="{{ collections[section.settings.collection].url }}">
            {{ section.settings.title | escape }}
          </a>
        </h2>
      {% endif %}

      {% if section.blocks.size > 1 %}
        <div class="tabs">
          {% for block in section.blocks %}
            <span class="tab{% if forloop.first %} active{% endif %}" data-tab="{{ forloop.index }}">
              {{ collections[block.settings.collection].title }}
            </span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.show_view_all %}
      <a data-cc-animate-click class="view-all-link" href="{{ collections[section.settings.collection].url }}">
        {{ 'collections.general.view_all' | t }}
      </a>
    {% endif %}
  </div>

  {% if section.settings.layout == 'carousel' %}
    {% for block in section.blocks %}
      <div
        class="swiper-container product-list product-list--{{ section.settings.layout }} tab-content{% if forloop.first %} active{% endif %}"
        data-products-in-view="{{ section.settings.grid }}"
        data-tab-content="{{ forloop.index }}"
      >
  
        <div class="swiper-wrapper" data-normheights=".image" data-normheights-inner="img">
          {% assign collection = block.settings.collection %}
          {% for product in collection.products limit: 12 %}
            <div class="swiper-slide">
              {% assign animate_delay = forloop.index | times: 0.4 %}
              {% render 'product-block',
                product: product,
                product_class: product_class,
                i: forloop.index,
                animate: animate_delay,
                show_vendor: section.settings.show_vendor,
                hide_swatches: section.settings.hide_swatches,
                enable_related_colors: true
              %}
            </div>
          {% endfor %}
        </div>
  
        <div class="swiper-scrollbar"></div>
        <a href="#" class="swiper-button-prev js-swiper-button-prev" aria-label="{{ 'general.accessibility_labels.previous' | t | escape }}">{% render 'svg-chevron-left' %}</a>
        <a href="#" class="swiper-button-next js-swiper-button-next" aria-label="{{ 'general.accessibility_labels.next' | t | escape }}">{% render 'svg-chevron-right' %}</a>
      </div>
    {% endfor %}
  {% else %}
    <div class="product-list

      product-list--{{ section.settings.layout }}
      {% if section.settings.grid_mobile == '2' %}mob-two-col{% endif %}
      mob-show-{{ section.settings.rows | times: section.settings.grid_mobile }}
      {% if section.settings.layout == 'columns' %}jiggly-split dynamic-col-{{ section.settings.grid }}{% else %}grid--uniform{% endif %}">

      {% if section.settings.collection != blank %}
        {% assign collection = collections[section.settings.collection] %}
        {% for product in collection.products limit: max_products %}
          {% render 'product-block', product: product, product_class: product_class, animation_type: animation_type, i: forloop.index, show_vendor: section.settings.show_vendor, animate: forloop.index, hide_swatches: section.settings.hide_swatches %}
        {% endfor %}

      {% else %}
        {% for i in (1..max_products) %}
          {% assign animate_delay = forloop.index | times: 0.4 %}
          {% render 'onboarding-product-block', i: forloop.index, product_class: product_class, animate: animate_delay, animation_type: animation_type %}
        {% endfor %}
      {% endif %}
    </div>
  {% endif %}
</div>

{% if section.settings.layout == 'carousel' %}</div>{% endif %}

{% schema %}
  {
    "name": "Tabbed Collections",
    "class": "section-tab-collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Shop by category"
      },
      {
        "type": "collection_list",
        "id": "collections",
        "label": "Collections",
        "limit": 5
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "options": [
          {
            "value": "columns",
            "label": "Collage"
          },
          {
            "value": "rows",
            "label": "Grid"
          },
          {
            "value": "carousel",
            "label": "Carousel"
          }
        ],
        "default": "rows",
        "info": "Collage will only work when the 'Image shape' is set to Natural - in Products / Image shape"
      },
      {
        "type": "range",
        "id": "grid",
        "label": "Desktop products per row",
        "min": 4,
        "max": 8,
        "default": 4
      },
      {
        "type": "checkbox",
        "id": "hide_swatches",
        "label": "Hide color swatches on product cards"
      },
      {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "Show 'View all' link",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "tab",
        "name": "Tab",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Tabbed collections",
        "settings": {}
      }
    ]
  }
{% endschema %}