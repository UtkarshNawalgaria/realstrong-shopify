.product-block .title {
  padding-top: 0;
  font-size: 14px;
}

.product-block .price .sale-price {
  font-size: 14px;
}

.was-price {
  font-size: 12px;
}

.product-area .product-area__details__title {
  font-size: 20px;
}

.product-area .price-area .current-price {
  font-size: 16px;
}

.product-area .price-area .was-price {
  font-size: 14px;
}

.product__tags {
  display: flex;
  gap: 5px;
  padding-bottom: 5px;
}

.product__tags .tag {
	padding: 2px 4px;
	border: 1px solid #e7e7e7;
	border-radius: 5px;
	font-size: 12px;
  font-weight: bold;
}

.site-control.nav-inline-desktop .nav-right-side .header-icon {
  width: 20px !important;
  height: 20px !important;
  fill: none;
}

@media (min-width: 1100px) {
  .site-control.nav-inline-desktop .nav-right-side {
    display: flex;
    align-items: center;
    gap: 20px;
    padding-right: 40px;
  }
}

.sub-collections {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}

.sub-collections .sub-collection-item {
  flex: 0 0 calc(50% - 6px);
  scroll-snap-align: start;
  width: 200px;
}

@media (min-width: 768px) {
  .sub-collections {
    overflow-x: none;
    justify-content: center;
  }

  .sub-collections .sub-collection-item {
    flex: 0 0 auto;
  }
}

.sub-collections .sub-collection-item .collection-name {
  text-align: center;
  font-weight: bold;
}

.sub-collections .sub-collection-item img {
  border-radius: 5px;
}

.nav-cart {
  position: relative;
}

.nav-cart .cart-item-count {
  position: absolute;
  top: -5px;
  right: -10px;
  color: white;
  border-radius: 50%;
  padding: 2px 6px;
  font-size: 12px;
  font-weight: bold;
}

.product-highlights {
  margin-top: 20px;
}

.no-bottom-spacing {
  margin-bottom: 0;
  padding-bottom: 0;
}

.text-center {
  text-align: center !important;
}

.text-left {
  text-align: left !important;
}

.text-right {
  text-align: right !important;
}

.section-tab-collections .section-heading h2 {
  padding-bottom: 20px;
}

.section-tab-collections .section-heading .tabs {
  display: flex;
  gap: 20px;
}

.section-tab-collections .section-heading .tabs .tab {
  display: block;
  cursor: pointer;
  padding: 7px;
  border-radius: 3px;
}

.section-tab-collections .section-heading .tabs .tab.active {
  background-color: black;
  color: white;
}

.section-tab-collections .tab-content {
  display: none;
}

.section-tab-collections .tab-content.active {
  display: block;
}