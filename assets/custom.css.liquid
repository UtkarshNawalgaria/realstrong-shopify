.product-block .title {
  padding-top: 0;
  font-size: 14px;
}

.product-block .price .sale-price {
  font-size: 14px;
}

.was-price {
  font-size: 12px;
}

.product-area .product-area__details__title {
  font-size: 20px;
}

.product-area .price-area .current-price {
  font-size: 16px;
}

